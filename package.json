{
  "name": "@raynode/glare",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "DEBUG='glare*' npx nodemon",
    "pregql2ts": "rm -rf server/gql-types.d.ts",
    "gql2ts": "find ./server -type f -name '*.schema.graphql' -exec cat \\{\\} \\+ | ./node_modules/.bin/gql2ts > server/gql-types.d.ts",
    "start": "ts-node -r tsconfig-paths/register server",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "clearMocks": true,
    "bail": true,
    "testRegex": "/server/.*\\.spec\\.[tj]sx?$",
    "modulePaths": [
      "server",
      "node_modules"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/server"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "server/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      ".*\\.d\\.ts",
      "<rootDir>/node_modules/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raynode/glare.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raynode/glare/issues"
  },
  "homepage": "https://github.com/raynode/glare#readme",
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "@raynode/nx-logger": "^4.1.0",
    "@raynode/nx-logger-debug": "^1.0.6",
    "@types/dotenv": "^4.0.2",
    "@types/graphql": "^0.12.7",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/koa__cors": "^2.2.2",
    "@types/mongoose": "^5.0.7",
    "@types/node-fetch": "^1.6.7",
    "@types/uuid": "^3.4.3",
    "apollo-server-koa": "^1.3.4",
    "dotenv": "^5.0.1",
    "googleapis": "^28.1.0",
    "graphql": "^0.13.2",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tools": "^3.0.0-alpha.10",
    "jsonwebtoken": "^8.2.0",
    "jwks-rsa": "^1.2.1",
    "koa": "^2.5.0",
    "koa-bodyparser": "^3.2.0",
    "koa-router": "^7.4.0",
    "mongoose": "^5.0.12",
    "node-fetch": "^2.1.2",
    "subscriptions-transport-ws": "^0.9.7",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tsconfig-paths": "^3.2.0",
    "typescript": "^2.8.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/faker": "^4.1.2",
    "@types/jest": "^22.2.2",
    "@types/koa": "^2.0.44",
    "@types/koa-router": "^7.0.27",
    "@types/mock-fs": "^3.6.30",
    "faker": "^4.1.0",
    "gql2ts": "^1.7.2",
    "jest": "^22.4.3",
    "mock-fs": "^4.4.2",
    "nodemon": "^1.17.2",
    "tslint": "^5.9.1"
  }
}
