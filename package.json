{
  "name": "@raynode/glare",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "DEBUG='glare*' npx nodemon",
    "start": "ts-node -r tsconfig-paths/register src",
    "migrations:undo": "sequelize db:migrate:undo:all",
    "migrations:all": "sequelize db:migrate",
    "migrations:seed": "sequelize db:seed:all",
    "migrations": "npm run migrations:undo; npm run migrations:all; npm run migrations:seed",
    "test": "npm run test:coverage",
    "test-only": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raynode/glare.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{migrations,seeders,config}/*.js": [
      "import-sort --write",
      "prettier --write",
      "git add"
    ],
    "src/**/*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "importSort": {
    ".js, .jsx, .es6, .es": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "resolutions": {
    "graphql": "^14.0.2"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raynode/glare/issues"
  },
  "homepage": "https://github.com/raynode/glare#readme",
