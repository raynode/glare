{
  "name": "@raynode/glare",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npx nodemon",
    "start": "ts-node server",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "clearMocks": true,
    "bail": true,
    "testRegex": "/server/.*\\.spec\\.[tj]sx?$",
    "modulePaths": [
      "server",
      "node_modules"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/server"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "server/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      ".*\\.d\\.ts",
      "<rootDir>/node_modules/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raynode/glare.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raynode/glare/issues"
  },
  "homepage": "https://github.com/raynode/glare#readme",
  "dependencies": {
    "@raynode/nx-logger": "^4.1.0",
    "@raynode/nx-logger-debug": "^1.0.6",
    "apollo-server-koa": "^1.3.4",
    "graphql": "^0.13.2",
    "koa": "^2.5.0",
    "koa-router": "^7.4.0",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "typescript": "^2.8.1"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/koa": "^2.0.44",
    "@types/koa-router": "^7.0.27",
    "jest": "^22.4.3",
    "nodemon": "^1.17.2"
  }
}
